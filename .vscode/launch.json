  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Transform | Development",
      "program": "${workspaceRoot}/node_modules/postcss-cli/bin/postcss",
      "args": [
        "index.css",
        "-o",
        "build/utilities.css",
        "-c",
        "postcss.config.js"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Transform | Production",
      "program": "${workspaceRoot}/node_modules/postcss-cli/bin/postcss",
      "args": [
        "index.css",
        "-o",
        "build/utilities.css",
        "-c",
        "postcss.config.js"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
